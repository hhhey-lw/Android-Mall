<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/super_light_gray"
    android:orientation="vertical">

    <!-- 状态栏 占位 -->
    <LinearLayout
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
    </LinearLayout>

    <!-- 返回&标题 -->
    <LinearLayout
        android:background="@color/white"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textStyle="bold"
            android:textSize="18sp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 头像 -->
            <LinearLayout
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/avatarImg"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/goodshow1"
                    android:layout_gravity="center"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/white"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/testImg"
                    android:layout_width="66dp"
                    android:layout_height="66dp"/>
                <LinearLayout
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginLeft="20dp"
                        android:text="更换"
                        android:id="@+id/changeImgBtn"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/corner_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"/>
                    <Button
                        android:id="@+id/submitAvatarBtn"
                        android:layout_marginLeft="20dp"
                        android:text="提交"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/corner_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 容器 -->
            <LinearLayout
                android:background="@drawable/corner_cart_item"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="用户名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/idUserName"
                        android:hint="username"
                        android:maxLength="24"
                        android:layout_marginStart="20dp"
                        android:enabled="true"
                        android:theme="@style/MyEditTextStyle"
                        android:singleLine="true"
                        android:background="@drawable/cart_buttom_line"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="联系电话"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/idPhone"
                        android:hint="phone"
                        android:maxLength="24"
                        android:layout_marginStart="20dp"
                        android:enabled="true"
                        android:theme="@style/MyEditTextStyle"
                        android:singleLine="true"
                        android:background="@drawable/cart_buttom_line"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="你的性别"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:id="@+id/idGender"
                        android:layout_marginStart="20dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/idMan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"/>
                        <RadioButton
                            android:id="@+id/idWoman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"/>
                    </RadioGroup>
                </LinearLayout>
                <Button
                    android:id="@+id/idUpdateUserInfoBtn"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:background="@drawable/corner_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改信息"/>
            </LinearLayout>

            <!-- 容器 -->
            <LinearLayout
                android:background="@drawable/corner_cart_item"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="旧的密码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/idOldPassword"
                        android:inputType="textPassword"
                        android:hint="old password"
                        android:maxLength="24"
                        android:layout_marginStart="20dp"
                        android:enabled="true"
                        android:theme="@style/MyEditTextStyle"
                        android:singleLine="true"
                        android:background="@drawable/cart_buttom_line"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="新的密码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/idPassword"
                        android:inputType="textPassword"
                        android:hint="password"
                        android:maxLength="24"
                        android:layout_marginStart="20dp"
                        android:enabled="true"
                        android:theme="@style/MyEditTextStyle"
                        android:singleLine="true"
                        android:background="@drawable/cart_buttom_line"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="确认密码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/idPasswordConfirm"
                        android:inputType="textPassword"
                        android:hint="confirm password"
                        android:maxLength="24"
                        android:layout_marginStart="20dp"
                        android:enabled="true"
                        android:theme="@style/MyEditTextStyle"
                        android:singleLine="true"
                        android:background="@drawable/cart_buttom_line"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <Button
                    android:id="@+id/idModifyPwdBtn"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:background="@drawable/corner_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改密码"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>