<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/corner_cart_item"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 用户信息 -->
    <LinearLayout
        android:paddingBottom="6dp"
        android:background="@drawable/cart_buttom_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:text="收货人："
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idUserName"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="韦龙"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/idPhone"
                    android:layout_marginLeft="21dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="13197722537"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 地址信息 -->
    <LinearLayout
        android:paddingBottom="6dp"
        android:background="@drawable/cart_buttom_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:text="收货地址："
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idAddress"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="广西壮族自治区 柳州市 城中区 东环大道168号广西科技大学尚理园南区五栋305"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/idDefaultAddr"
            android:textColor="@color/orange"
            android:text="默认地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/idEditBtn"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:text="编辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/idDelBtn"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/idUseBtn"
            android:layout_marginLeft="10dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="使用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>